<script>

window.onload = function() {

	document.querySelector('input[name="seleccioncolor"]').addEventListener('change',function(){
	
		document.querySelector('html').style.background= this.value;
		document.querySelector('.content h2 p').innerHTML= 'Este es el color que has seleccionado: ';
		document.querySelector('.content h3').innerHTML= this.value;
	

	});

}


</script>
